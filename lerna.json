{
    "$schema": "node_modules/@lerna-lite/cli/schemas/lerna-schema.json",
    "version": "independent",
    "packages": ["packages/*"],
    "npmClient": "bun",
    "command": {
        "version": {
            "allowBranch": ["main", "master"],
            "conventionalCommits": false,
            "gitTagVersion": true,
            "yes": true,
            "forcePublish": true,
            "syncWorkspaceLock": true,
            "push": false
        },
        "publish": {
            "ignoreScripts": false,
            "yes": true
        }
    }
}
